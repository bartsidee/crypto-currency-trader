{
  "compilerOptions": {
    "target": "es6",
    "lib": [ "es2015" ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "backtester",
    "**/*.test.ts",
    "bin"
  ],
  "compileOnSave": false,
  "awesomeTypescriptLoaderOptions": {
    "useBabel": false
  }
}
